{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"ES2022",
			"ESNext"
		],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"strict": true,
		"target": "ES6",
		"noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
	},
	"exclude": [
		"node_modules",
		"./.eslintrc.js",
		"vite.config.ts",
		"dist"
	],
	"include": [
		"src/**/*.ts",
    "src/**/*.d.ts"
	]
}